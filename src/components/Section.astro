---
type Props =
  | {
      title: string;
      titleLink?: {
        text: string;
        link: string;
      };
    }
  | {};

const props = Astro.props;
---

<section class="mt-12">
  {
    "title" in props && (
      <h2 class="font-semibold text-lg my-4">
        {props.title}
        {props.titleLink && (
          <span class="opacity-60">
            -
            <a href={props.titleLink.link} class="link">
              <em>{props.titleLink.text}</em>
            </a>
          </span>
        )}
      </h2>
    )
  }
  <slot />
</section>
