---
type Props = {
  date: string;
  title: string;
  subTitle: string;
  link: string;
};

const { date, title, subTitle, link } = Astro.props;
---

<div class="flex mb-[16px]">
  <div class="hidden sm:block min-w-[160px] mr-[8px] opacity-60 font-semibold">
    {date}
  </div>
  <div>
    <a href={link}>
      <h3 class="mb-2 font-bold">
        {title}
        <br />
        <span class="opacity-60 text-sm font-medium"
          >{subTitle}<span class="sm:hidden">, {date}</span></span
        >
      </h3>
    </a>
    <slot />
  </div>
</div>
