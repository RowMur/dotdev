---
import ClickableCard from "../components/ClickableCard.astro";

export type PersonalProjectType = {
  title: string;
  subTitle: string;
  githubLink: string;
  imagePath?: string;
  liveDemoLink?: string;
};

type Props = {
  personalProject: PersonalProjectType;
};

const { personalProject }: Props = Astro.props;
---

<div class="flex gap-1">
  <div class="w-full">
    <ClickableCard href={personalProject.githubLink}>
      {
        personalProject.imagePath && (
          <img
            src={personalProject.imagePath}
            alt={`${personalProject.title} screenshot`}
            class="max-h-12 mr-4 rounded-lg"
          />
        )
      }
      <div>
        <h3 class="font-bold">
          {personalProject.title}
        </h3>
        <p class="opacity-60 text-sm font-medium">{personalProject.subTitle}</p>
      </div>
    </ClickableCard>
  </div>
  {
    personalProject.liveDemoLink && (
      <ClickableCard href={personalProject.liveDemoLink}>
        <p class="text-center opacity-60 text-sm font-medium grid place-content-center">
          Live Demo
        </p>
      </ClickableCard>
    )
  }
</div>
